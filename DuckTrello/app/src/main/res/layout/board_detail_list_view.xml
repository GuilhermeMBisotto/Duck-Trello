<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:paddingTop="5sp"
              android:paddingRight="10sp"
              android:paddingBottom="5sp"
              android:paddingLeft="10sp"
              android:background="@color/greyListView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20sp"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="10sp"
            android:layout_marginStart="10sp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_listTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5sp"
                android:gravity="center_vertical"
                android:textColor="@color/blackDuck"
                android:text="Nome da Lista"/>

            <TextView
                android:id="@+id/tv_cardName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5sp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimaryDark"
                android:text="Nome do card"/>

            <TextView
                android:id="@+id/tv_checkLists"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:textColor="@color/blackDuck"
                android:text="Checklists: 13/20"/>

            <TextView
                android:id="@+id/tv_membersName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:textColor="@color/blackDuck"
                android:text="Alexandre, Guilherme, Leonardo e Lucas"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5sp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/lightGreyDuck"
                    android:text="ComentÃ¡rios: 2"/>

                <TextView
                    android:id="@+id/tv_attachments"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50sp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/lightGreyDuck"
                    android:text="Anexos: 4"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cb_card"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

