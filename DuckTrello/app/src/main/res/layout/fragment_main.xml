<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context=".Activities.MainActivityFragment"
                tools:showIn="@layout/activity_main"
                android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="50dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_duck_logo"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <TextView
                android:labelFor="@+id/login_etLogin"
                android:text="Login"
                style="@style/Common_TextView" />

            <EditText
                android:id="@+id/login_etLogin"
                android:hint="E-mail"
                style="@style/Common_EditText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <TextView
                android:labelFor="@+id/login_etPassword"
                android:text="Password"
                style="@style/Common_TextView" />

            <EditText
                android:id="@+id/login_etPassword"
                android:hint="Password"
                style="@style/Common_EditText" />
        </LinearLayout>

        <Button
            android:id="@+id/login_btnLogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Logar"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

</RelativeLayout>
